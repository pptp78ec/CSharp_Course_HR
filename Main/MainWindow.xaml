<Window x:Class="Main.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Main"
        mc:Ignorable="d"
        Title="УЧЕТ ПЕРСОНАЛА" Height="200" Width="600">
    <Grid>
        <Menu Height="20" Margin="0" VerticalAlignment="Top">
            <MenuItem Header="Действия">
                <MenuItem Header="Новый сотрудник" Click="MenuItem_Click_3"/>
                <MenuItem Header="Поиск сотрудника" Click="MenuItem_Click_1"/>
                <MenuItem Header="Под сокращение по возрасту" Click="MenuItem_Click_2"/>
            </MenuItem>
            <MenuItem Header="Приказы">
                <MenuItem Header="Новый общий приказ" Click="MenuItem_Click_4"/>
                <MenuItem Header="Просмотр общих приказов" Click="MenuItem_Click_5"/>
                <MenuItem Header="Все приказы на увольнение" Click="MenuItem_Click_6"/>
            </MenuItem>    
            <MenuItem Header="Программа">
                <MenuItem Header="Параметры" Click="MenuItem_Click"/>
            </MenuItem>
            <MenuItem x:Name="MN_AdminTools" Header="Ввод данных" Click="MN_AdminTools_Click">
                
            </MenuItem>
        </Menu>

    </Grid>
</Window>
