<Window x:Class="Main.AdminEditSelection"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Main"
        mc:Ignorable="d"
        Title="Выбор" Height="240" Width="300" ResizeMode="CanMinimize">
    <Grid>
        <RadioButton x:Name="RB_Div" Content="Отделы" HorizontalAlignment="Left" Margin="50,30,0,0" VerticalAlignment="Top"/>
        <RadioButton x:Name="RB_Pos" Content="Должности" HorizontalAlignment="Left" Margin="50,60,0,0" VerticalAlignment="Top"/>
        <RadioButton x:Name="RB_FCs" Content="Статьи увольнения" HorizontalAlignment="Left" Margin="50,90,0,0" VerticalAlignment="Top"/>
        <RadioButton x:Name="RB_EduLevel" Content="Образование" HorizontalAlignment="Left" Margin="50,120,0,0" VerticalAlignment="Top"/>
        <Button Content="Выбрать" HorizontalAlignment="Left" Margin="120,150,0,0" VerticalAlignment="Top" Height="20" Width="60" Click="Button_Click"/>


    </Grid>
</Window>
