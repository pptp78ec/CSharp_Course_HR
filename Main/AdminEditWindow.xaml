<Window x:Class="Main.AdminEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Main"
        mc:Ignorable="d"
        Title="AdminEditWindow" Height="450" Width="800" ResizeMode="CanMinimize" Loaded="Window_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="8*"/>
            <RowDefinition Height="195*"/>
            <RowDefinition Height="14*"/>
        </Grid.RowDefinitions>
        
        <Button x:Name="BTN_Save" Content="Сохранить" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="2" Click="BTN_Save_Click" />
        <DataGrid x:Name="DG_View" Grid.Row="1" Margin="10 10"/>

    </Grid>
</Window>
